{
  "name": "web-link-collector",
  "version": "1.0.9",
  "description": "A library and CLI tool to recursively collect links from a given initial URL and output them as structured data",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "bin": {
    "wlc": "dist/bin/wlc.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "README-ja.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist/src --target node --format esm && bun build bin/wlc.ts --outdir dist/bin --target node --format esm && tsc -p tsconfig.build.json",
    "postbuild": "chmod +x dist/bin/wlc.js",
    "test": "bun test --testPathIgnorePatterns=\"tests/cli\"",
    "test:cli": "bun test tests/cli/",
    "test:all": "bun test",
    "test:core": "bun test tests/filter.test.ts tests/logger.test.ts tests/parser.test.ts tests/fetcher.test.ts",
    "dev": "bun run bin/wlc.ts",
    "start": "bun run dist/bin/wlc.js",
    "prepare": "husky",
    "prepublishOnly": "bun run check && bun run build",
    "postversion": "git push && git push --tags",
    "lint": "bunx eslint . --ext .ts",
    "lint:fix": "bunx eslint . --ext .ts --fix",
    "format": "bunx prettier --write 'src/**/*.ts' 'bin/**/*.ts' 'tests/**/*.ts'",
    "tsc": "tsc",
    "check": "bun run lint && bun run test:core",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "web",
    "link",
    "crawler",
    "collector",
    "cli",
    "bun"
  ],
  "author": "xiaotiantakumi",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "js-yaml": "^4.1.0",
    "p-limit": "^6.2.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.6",
    "@types/node": "^20.8.2",
    "@types/yargs": "^17.0.26",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "bun": "^1.2.14",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaotiantakumi/WebLinkCollector.git"
  },
  "bugs": {
    "url": "https://github.com/xiaotiantakumi/WebLinkCollector/issues"
  },
  "homepage": "https://github.com/xiaotiantakumi/WebLinkCollector#readme",
  "engines": {
    "node": ">=14.0.0",
    "bun": ">=1.0.0"
  },
  "runtime": {
    "bun": ">=1.0.0"
  }
}

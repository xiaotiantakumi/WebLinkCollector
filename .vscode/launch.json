{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "request": "launch",
      "name": "Launch web-link-collector (Bun)",
      "program": "${workspaceFolder}/bin/web-link-collector.ts",
      "args": ["--configFile", "config.yaml", "--logLevel", "debug"],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Bun: Run All Tests",
      "type": "bun",
      "request": "launch",
      "program": "test",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "Bun: Run Current Test File",
      "type": "bun", 
      "request": "launch",
      "program": "test",
      "args": ["${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "Bun: Run Formatters Tests",
      "type": "bun",
      "request": "launch",
      "program": "test",
      "args": ["tests/formatters/"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    }
  ]
}
